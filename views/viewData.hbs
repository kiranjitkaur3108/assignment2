<h2>{{title}}</h2>

<!-- Step 10: Display all records (including ones with empty names) -->
<!-- Highlight the rows where name is missing (now shown as "N/A") -->

<table border="1" cellpadding="6" cellspacing="0" style="margin:auto; border-collapse:collapse; width:90%;">
  <thead style="background-color:#003d80; color:white;">
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Host</th>
      <th>Neighbourhood</th>
      <th>Room Type</th>
      <th>Price</th>
      <th>Image</th>
    </tr>
  </thead>
  <tbody>
    {{#each data}}
      <!-- Step 10: Highlight rows with empty names using inline style -->
      <tr style="{{#unless name}}background-color:#fff3cd;{{/unless}}">
        <td>{{id}}</td>
        <td>{{emptyName name}}</td>
        <td>{{host_name}}</td>
        <td>{{neighbourhood}}</td>
        <td>{{room_type}}</td>
        <td>${{price}}</td>
        <!-- Step 10: Show image if available -->
        <td>
          {{#if picture_url}}
            <img src="{{picture_url}}" alt="{{name}}" width="100">
          {{else}}
            <span style="color:gray;">No image</span>
          {{/if}}
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>
